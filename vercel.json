{
  "_comment": "Frontend-only deployment configuration. Backend must be deployed separately to Railway, Render, or Heroku. See DEPLOYMENT_ARCHITECTURE.md for details.",
  "buildCommand": "npm install --prefix ./client && npm run build --prefix ./client",
  "outputDirectory": "client/dist",
  "installCommand": "npm install --prefix ./client",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
